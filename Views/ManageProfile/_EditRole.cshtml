@model RoleModel

<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card">
            <div class="card-content">
                <form id="EditRoleForm" asp-action="EditRole" method="post" onsubmit="submitFormModal(event,'Редактирование роли')">
                    <input asp-for="Id" />
                    
                        <div class="input-field">
                            <input placeholder="Название роли" asp-for="Name" />

                            <label class="active" asp-for="Name"></label>
                        </div>
                        <div >
                            <span asp-validation-for="Name"></span>
                        </div>
                        
                   
                        <div>
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    
                    
                        <div class="right-align">
                            <button type="submit" class="btn teal darken-3">Сохранить</button>
                        </div>
                  
                </form>
            </div>
        </div>
    </div>
</div>