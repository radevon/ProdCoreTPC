@model ProfileModel

<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card">
            <div class="card-content">
                <form asp-action="AddProfile" method="post" onsubmit="submitFormModal(event,'Регистрация пользователя')">
                    <div class="input-field">
                        <input asp-for="UserName" id="UserName" type="text" class="validate" />
                        <label asp-for="UserName" class="active" for="UserName"></label>
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="Email" id="Email" type="email" class="validate" />
                        <label asp-for="Email" class="active" for="Email"></label>
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="Password" id="Password" type="password" class="validate" />
                        <label asp-for="Password" class="active" for="Password"></label>
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="PasswordRepeat" id="PasswordRepeat" type="password" class="validate" />
                        <label asp-for="PasswordRepeat" class="active" for="PasswordRepeat"></label>
                        <span asp-validation-for="PasswordRepeat"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="PhoneNumber" id="PhoneNumber" type="tel" class="validate" />
                        <label asp-for="PhoneNumber" class="active" for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div>
                        <div asp-validation-summary="ModelOnly"></div>
                    </div>

                    <div class="right-align"> 
                        <button type="submit" class="btn waves-effect waves-light">Зарегистрировать пользователя</button>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>