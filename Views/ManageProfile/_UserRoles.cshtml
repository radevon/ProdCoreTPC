@model UserRolesModel
    <div class="row">
        <div class="col s12 m12 l8 offset-l2">
            <div class="card">
                <div class="card-content">
                    <form asp-action="ChangeRolesSave" method="post" onsubmit="submitFormModal(event,'Назначение ролей пользователю')">
                        <input type="hidden" asp-for="@Model.UserId" />
                        <input type="hidden" asp-for="@Model.UserName"/>
                        <div class="row">
                            <div class="col s12">
                                <h5>Выберите роли для пользователя: <b class="red-text text-lighten-2">@Model.UserName</b></h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                @foreach (var (key, value) in Model.Roles)
                                {
                                    <div>
                                        <label>
                                            <input type="checkbox" asp-for="@Model.Roles[key]" class="filled-in" />
                                            <span>@key</span>
                                        </label>
                                       
                                    </div>

                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col m12">
                                <input type="submit" class="btn teal darken-3 right" value="Применить" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>